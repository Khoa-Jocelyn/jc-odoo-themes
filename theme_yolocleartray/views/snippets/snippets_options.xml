<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="0">
		<!--Snippet options -->
		<template id="snippet_header_options" inherit_id="website.snippet_options">
			<xpath expr="//we-select[@data-variable='header-template']/we-button[1]" position="before">
				<we-button title="yolocleartray" data-name="header_yolocleartray_opt"
					data-customize-website-views="theme_yolocleartray.yolocleartray_template_header"
					data-customize-website-variable="'yolocleartray'"
					data-img="/website/static/src/img/snippets_options/header_template_default.svg" />
			</xpath>
			<!-- Header > Navbar Options -->
			<xpath expr="//div[@data-js='HeaderNavbar']//we-button[@data-customize-website-variable=&quot;&#39;center&#39;&quot;]" position="attributes">
				<attribute name="data-customize-website-views" separator=", " add="theme_yolocleartray.yolocleartray_template_header_align_center" />
			</xpath>

			<xpath expr="//div[@data-js='HeaderNavbar']//we-button[@data-customize-website-variable=&quot;&#39;right&#39;&quot;]" position="attributes">
				<attribute name="data-customize-website-views" separator=", " add="theme_yolocleartray.yolocleartray_template_header_align_right" />
			</xpath>
		</template>

		<template id="snippet_footer_options" inherit_id="website.snippet_options">
			<xpath expr="//we-select[@data-variable='footer-template']/we-button[1]" position="before">
				<we-button title="yolocleartray"
					data-customize-website-views="theme_yolocleartray.yolocleartray_footer"
					data-customize-website-variable="'yolocleartray'"
					data-img="/website/static/src/img/snippets_options/footer_template_links.svg" />
			</xpath>
		</template>
	</data>
</odoo>
